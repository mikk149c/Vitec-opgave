<Window x:Class="Opgave.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Opgave"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#377ae6">
        <StackPanel Orientation="Horizontal">
            <TextBox Name="Input" AcceptsTab="True" AcceptsReturn="True" Margin="10,10,10,10" Width="360"/>
            <Button Name="ProcessInput" Width="20" Height="25" Background="Orange" Click="ProcessText"/>
            <TextBox Name="Output" IsReadOnly="True" Margin="10,10,10,10" Width="360"/>
        </StackPanel>
    </Grid>
</Window>
